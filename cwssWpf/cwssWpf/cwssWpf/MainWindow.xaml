<Window x:Class="cwssWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cwssWpf"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="SDSU Climbing Wall System" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="AliceBlue"></SolidColorBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="_NewUser"></MenuItem>
                    <MenuItem Header="_EmployeeLogIn"></MenuItem>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>


        <TextBox Grid.Row="1" Grid.Column="0" x:Name="textBox" HorizontalAlignment="Right" Height="23" Margin="5,5,5,5" TextWrapping="Wrap" Text="UserId" VerticalAlignment="Center" Width="167"/>
        <Button Grid.Row="1" Grid.Column="1" x:Name="button" Content="Check In" HorizontalAlignment="Left" Margin="5,5,5,5" VerticalAlignment="Center" Width="75"/>
        
        
        <StatusBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Height="20" Margin="0,0,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
