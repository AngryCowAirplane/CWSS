<Window x:Class="cwssWpf.Windows.Waiver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cwssWpf.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="AliceBlue"
        Title="Waiver" Height="600" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <WebBrowser x:Name="webBrowser" Grid.Row="0" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch"/>
        <Button x:Name="btnSignForm" Content="Sign Form" Grid.Row="1" HorizontalAlignment="Center" Margin="4,4,4,4" VerticalAlignment="Center" Click="btnSignForm_Click"/>
    </Grid>
</Window>
